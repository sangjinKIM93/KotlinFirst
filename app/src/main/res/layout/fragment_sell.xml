<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ETC.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/list_title">
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="종목명"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="매입가"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="매도가"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            />

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="매도량"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="손익"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            />

    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sellRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        />


    <Button
        android:id="@+id/totalProfit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="총 손익"
        android:layout_gravity="bottom"
        android:backgroundTint="@color/moccasin"
        android:layout_margin="16dp"
        />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addSellBtn"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:backgroundTint="@color/goldenrod"
        app:borderWidth="0dp"
        app:fabSize="normal"
        android:elevation="6dp"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/ic_add_white"
        />



</androidx.coordinatorlayout.widget.CoordinatorLayout>